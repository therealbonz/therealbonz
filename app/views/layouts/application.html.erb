<%= stylesheet_link_tag 'http://therealbonz.com/style.css' %> 

<section class="cover jumbotron jumbotron-fluid" id="cover">
    <div class="container-fluid bg-image" style="background-image: url('https://therealbonz.com/abstract-gradient-blur-banner-design-vector2.jpg'); height: 200px; background-size: cover; background-position: center;">

<!-- Navbar --> 
<nav class="navbar-dark navbar fixed-top">
  <a class="navbar-brand" href="http://therealbonz.com/"> 
    <img src="http://therealbonz.com/OIP.jpeg" alt="TheRealBonz" height="30"> 
  </a> 
  <ul class="navbar-nav"> 
    <li class="nav-item"> 
      <a class="nav-link" href="http://therealbonz.com">Home</a> 
    </li> 
    <% if user_signed_in? %>
      <li class="nav-item nav-link"><%= link_to "New Video", new_video_path %></li>
      <li class="nav-item nav-link"><%= link_to "New pin", new_pin_path %></li>
      <li class="nav-item nav-link"><%= link_to "Account", edit_user_registration_path %></li> 
      <li class="nav-item nav-link"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li> 
